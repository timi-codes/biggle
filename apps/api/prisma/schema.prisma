// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

enum SocialPlatform {
  TWITTER
  FACEBOOK
  TWITCH
  YOUTUBE
  TIKTOK
  INSTAGRAM
  OTHER
}

model Celebrity {
  id              Int     @id @default(autoincrement())
  email           String  @unique
  username        String  @unique
  name            String

  password         String
  photo            String?
  platform         SocialPlatform
  numOfFollowers   Int
  fee              Float

  categories       Category[]
  tags             Tag[]

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@map("users")
}

model Category {
  id          String        @id @default(cuid())
  name        String        @unique
  celebrities   Celebrity[]

  @@map("categories")
}

model Tag {
  id          String        @id @default(cuid())
  name        String        @unique
  celebrity   Celebrity[]

  @@map("tags")
}
